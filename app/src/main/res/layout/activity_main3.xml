<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/anh_login" />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img1"
        android:text="Ảnh Đại Diện"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chạm vào ảnh để thay đổi"
            android:textSize="16sp"
            />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/avatar"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/avatar_ex"
            app:riv_corner_radius="80dp"
            app:riv_oval="true"
            />
        <RelativeLayout
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageButton
                android:background="@drawable/custom_button2"
                android:src="@drawable/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
               />
            <ImageButton

                android:outlineSpotShadowColor="@color/purple_700"
                android:background="@drawable/custom_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/male"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlt1"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:typeface="sans"
                android:layout_centerVertical="true"
                android:id="@+id/tvb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bước 3/3"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#A3A2A2"/>

            <Button

                android:layout_alignParentRight="true"
                android:id="@+id/bttnext3"
                android:drawableRight="@drawable/fi_arrow_right"
                android:textSize="8sp"
                android:textColor="#fff"
                android:background="@drawable/custom_button"
                android:layout_alignRight="@+id/tvb"
                android:textAllCaps="false"
                android:layout_height="60dp"
                android:layout_width="60dp"
                />
        </RelativeLayout>

    </LinearLayout>




</RelativeLayout>